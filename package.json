    "canvas-prebuilt": "2.0.0-alpha.2",
    "coveralls": "^3.0.1",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-ava": "^4.5.1",
    "eslint-plugin-import": "^2.12.0",
