{
  "name": "avatar-initials",
  "version": "5.0.0",
  "description": "JavaScript library for showing Gravatars or generating user avatars from initials.",
  "author": "Matthew Callis <matthew.callis@gmail.com>",
  "contributors": [
    {
      "name": "Matthew Callis",
      "email": "matthew.callis@gmail.com"
    }
  ],
  "maintainers": [
    {
      "name": "Matthew Callis",
      "email": "matthew.callis@gmail.com",
      "web": "http://matthewcallis.github.io/avatar/"
    }
  ],
  "main": "./src/avatar.js",
  "module": "./esm/index.js",
  "types": "./types/index.d.ts",
  "typings": "./types/index.d.ts",
  "files": [
    "browser/*",
    "esm/*",
    "src/*",
    "types/*"
  ],
  "homepage": "http://matthewcallis.github.io/avatar/",
  "repository": {
    "type": "git",
    "url": "https://github.com/MatthewCallis/avatar"
  },
  "bugs": {
    "url": "https://github.com/MatthewCallis/avatar/issues"
  },
  "keywords": [
    "avatar",
    "gravatar",
    "initials",
    "profile photo"
  ],
  "engines": {
    "node": ">= 12"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.20.2",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-commonjs": "^24.0.0",
    "@rollup/plugin-terser": "^0.3.0",
    "@typescript-eslint/parser": "^5.48.2",
    "ava": "^5.1.1",
    "browser-env": "^2.0.21",
    "canvas": "^2.11.0",
    "core-js": "^3.27.2",
    "eslint": "^8.32.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-anti-trojan-source": "^1.1.1",
    "eslint-plugin-ava": "^14.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsdoc": "^39.6.7",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-no-inferred-method-name": "^2.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-optimize-regex": "^1.2.1",
    "eslint-plugin-ramda": "^2.5.1",
    "eslint-plugin-react": "^7.32.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-security": "^1.6.0",
    "eslint-plugin-xss": "^0.1.12",
    "jsdom": "^21.0.0",
    "nock": "^13.3.0",
    "nyc": "^15.1.0",
    "precommit-hook-eslint": "^3.0.0",
    "release-it": "^15.6.0",
    "rollup": "^3.10.0",
    "sinon": "^15.0.1",
    "typescript": "^4.9.4"
  },
  "directories": {},
  "preferGlobal": false,
  "private": false,
  "license": "MIT",
  "licenses": [
    {
      "type": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  ],
  "scripts": {
    "lint": "eslint src",
    "make": "node rollup.config.js",
    "make-types": "rm -fr types/ && mkdir types && tsc --project .tsconfig.json",
    "release": "release-it",
    "report": "nyc report --reporter=html",
    "test-watch": "npm test -- --watch",
    "test": "NODE_ENV=test nyc ava",
    "validate": "npm ls"
  },
  "ava": {
    "files": [
      "test/**/*.test.mjs"
    ],
    "ignoredByWatcher": [
      "!src/**/*.js"
    ],
    "cache": false,
    "concurrency": 5,
    "failFast": false,
    "tap": false,
    "timeout": "1m",
    "verbose": true,
    "require": [
      "./test/setup-browser-env.mjs"
    ]
  },
  "nyc": {
    "cache": true,
    "all": true,
    "check-coverage": false,
    "include": [
      "src/avatar.js"
    ]
  },
  "release-it": {
    "github": {
      "release": true
    }
  },
  "pre-commit": [
    "lint",
    "validate",
    "test"
  ]
}
